{
    "openapi": "3.0.0",
    "info": {
        "title": "API Bancaire - Gestion des Comptes",
        "description": "Documentation de l'API de Gestion des Comptes",
        "contact": {
            "email": "contact@gestioncomptes.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://gestioncompteslaravel.onrender.com",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/comptes": {
            "get": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Liste tous les comptes",
                "description": "Admin peut récupérer la liste de tous les comptes. Client peut récupérer la liste de ses comptes.",
                "operationId": "listComptes",
                "parameters": [
                    {
                        "name": "X-Role",
                        "in": "header",
                        "description": "Rôle de l'utilisateur (admin/client)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des comptes récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Liste des comptes récupérée avec succès"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Compte"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Créer un nouveau compte",
                "description": "Créer un nouveau compte bancaire pour un client existant ou nouveau",
                "operationId": "createCompte",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "epargne",
                                            "cheque",
                                            "courant"
                                        ]
                                    },
                                    "soldeInitial": {
                                        "type": "number"
                                    },
                                    "solde": {
                                        "type": "number"
                                    },
                                    "devise": {
                                        "type": "string",
                                        "example": "XOF"
                                    },
                                    "client": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "nullable": true
                                            },
                                            "titulaire": {
                                                "type": "string"
                                            },
                                            "nci": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "telephone": {
                                                "type": "string"
                                            },
                                            "adresse": {
                                                "type": "string"
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Compte créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Compte créé avec succès"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Compte"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Client": {
                "title": "Client",
                "description": "Modèle de client",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "titulaire": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "nci": {
                        "type": "string",
                        "example": "1234567890123"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "telephone": {
                        "type": "string",
                        "example": "221776543210"
                    },
                    "adresse": {
                        "type": "string",
                        "example": "123 Rue Principale, Dakar"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Compte": {
                "title": "Compte",
                "description": "Modèle de compte bancaire",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "numero": {
                        "type": "string",
                        "example": "CPT123456789"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "epargne",
                            "cheque",
                            "courant"
                        ]
                    },
                    "soldeInitial": {
                        "type": "number",
                        "format": "double",
                        "example": 1000
                    },
                    "solde": {
                        "type": "number",
                        "format": "double",
                        "example": 1000
                    },
                    "devise": {
                        "type": "string",
                        "example": "XOF"
                    },
                    "statut": {
                        "type": "string",
                        "enum": [
                            "actif",
                            "bloque",
                            "ferme"
                        ]
                    },
                    "client_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "client": {
                        "$ref": "#/components/schemas/Client"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "tags": [
        {
            "name": "Comptes",
            "description": "Comptes"
        }
    ],
    "security": [
        {
            "bearerAuth": []
        }
    ]
}